{
    "name": "letscms/magento-product-attachment",
    "description": "Magento 2 Product Attachment Module by Letscms",
    "type": "magento2-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Letscms",
            "email": "letscmsdev@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "magento/framework": ">=100.0.0",
        "letscms/product-attachment": "dev-main"  // Or specify the version tag if available
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/letscms/Free-Product-Attachment-magento2-by-letscms"
        }
    ],
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Letscms\\ProductAttachment\\": ""
        }
    },
    "minimum-stability": "stable",  // Ensures that Composer only installs stable versions by default
    "prefer-stable": true  // Ensures that stable versions are preferred over unstable ones
}
